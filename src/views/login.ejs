<%-include('includes/head')%>
<body>
    <%-include('includes/nav')%>

    <div class="container mt-4 border-primary rounded" style="background-color: rgba(0, 0, 0, 0.33);">
        <div class="row justify-content-center">

            <div class="col-lg-0 my-3">
                <h1 class="text-center">LOGIN</h1>
                <p class="text-center lead">LOGIN / CADASTRAR</p>

                <%- include('includes/messages')%>

                <div class="row text-center">
                    <div class="col">
                        <h4>Entrar no sistema</h4>

                        <form action="/login" method="POST">
                            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                            <div class="form-group">
                                <label>Email address</label>
                                <input type="email" class="form-control" name="email">
                            </div>

                             <div class="form-group">
                                <label>Senha</label>
                                <input type="password" class="form-control" name="password">
                            </div>
                            <button type="submit" class="btn btn-primary mt-3">Entrar</button>
                        </form>

                    </div>

                    <div class="col">
                        <h4>Fa√ßa seu cadastro</h4>

                         <form action="/login/register" method="POST">
                            <input type="hidden" name="_csrf" value=<%= csrfToken %>>

                            <div class="form-group">
                                <label>New email address</label>
                                <input type="email" class="form-control" name="email">
                            </div>

                             <div class="form-group">
                                <label>New senha address</label>
                                <input type="password" class="form-control" name="password">
                            </div>
                            <button type="submit" class="btn btn-primary mt-3">Criar conta</button>
                        </form>

                    </div>
                </div>
            </div>
            <div class="col-lg-2"></div>
        </div>
    </div>

    <%-include('includes/script')%>
</body>
